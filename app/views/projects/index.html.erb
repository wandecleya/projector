<p id="notice"><%= notice %></p>

<div class='row'>
  <div class="col s3">
  <%= link_to 'New Project', new_project_path, :class => 'btn blue-grey darken-4' %>
  </div>
</div>

<% @projects.in_groups_of(4) do |group|%>
  <div class="row">
    <% group.compact.each do |project| %>
      <div class="col s3">
        <div class="card">
          <div class="card-image waves-effect waves-block waves-light">
            <%= image_tag project.picture_url, width: '100%', :class=>" img-thumbnail activator" if project.present? %>

            <%= link_to project.name, project, class: "card-title black-text"%>
              
   
          </div>
          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4"><%= project.name %><i class="material-icons right">close</i></span>
            <p><%= project.description %></p>
          </div>
       
        
        </div>
      </div>
    <% end %>
  </div>
<% end %>







